block content
 .container
   .row
     .col-sm-8.blog
       section
         article
           h1
             a(href='#') #{data.articleInfo.title}
           .row
             .col-sm-12.col-md-12
               span.glyphicon.glyphicon-pencil
               a(href='#') 
               | #{data.articleInfo.comments.length}  Comments
               span.glyphicon.glyphicon-time
               | #{data.articleInfo.createDate}
           hr
           br
           p.lead 
              |#{data.articleInfo.content}
           hr
     .col-sm-4.sidebar
       h3.tpad Search
       section
         .input-group.input-group-sm.tpad
           span.input-group-addon.glyphicon.glyphicon-search
           input.form-control.input-lg(type='text', placeholder='Search')
           span.input-group-btn
             button.btn.btn-default(type='button') Go
         hr
       section
           h3.tpad Tags
           a.list-group-item.active(href='#')
             span.badge #{data.totalTags}
             | All Tags 
             - each tag in data.tags
               a.list-group-item(href='#')
                 span.badge #{tag.numberOf}
                 | #{tag.name}
           hr
       section
         h3.tpad Latest from Twitter
         .media.tpad
           a.pull-left(href='https://twitter.com/ftmikeyoung')
             img.media-object(src='images/baby_girl.jpg', alt='user', width='50%')
           .media-body
             h4.media-heading @sdong
             p.bpad Titanic is a good movie
         hr
  
